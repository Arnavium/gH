<%-include ("partials/header")-%>
<div style="padding-top: 12%; text-align: center;">
    <h1>Editing <%=game.name%></h1>
</div>   

    <div>
        <form action="/games/<%=game._id%>?_method_PUT" method="POST">
            <div class="container" style="width: 30%; margin: 25px auto;">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Game Title" name="game[name]" value="<%=game.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="img url" name="game[image]" value="<%=game.image%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" type="text" placeholder="description" name="game[description]" value="<%=game.description%>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
                <a href="/games/<%=game._id%>">Go back</a>
            </div> 
        </form>
    </div>
</div>

<%-include ("partials/footer")-%>