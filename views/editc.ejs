<%-include ("partials/header.ejs")-%>
<h1 style="padding-top: 12%; text-align: center;">Editing COMMENT</h1>
<div>
    <form action="/games/<%=game_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="container" style="width: 30%; margin: 25px auto;">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
            <a href="/games/<%=game_id%>">Go back</a>
        </div> 
    </form>
</div>
