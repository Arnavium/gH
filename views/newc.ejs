<%-include ("partials/header.ejs")-%>
<h1 style="padding-top: 12%; text-align: center;">CREATING A NEW COMMENT</h1>
<div>
    <form action="/games/<%=game._id%>/comments" method="POST">
        <div class="container" style="width: 30%; margin: 25px auto;">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Comment" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
            <a href="/games/<%=game._id%>">Go back</a>
        </div> 
    </form>
</div>
